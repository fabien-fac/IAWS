<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#d9d9d9" />
      <stroke
          android:width="1dp"
          android:color="#d9d9d9" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#d9d9d9"
          android:endColor="#a7a4a4"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#bcbcbc" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>
</selector>