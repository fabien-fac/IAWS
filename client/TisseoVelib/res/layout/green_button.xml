<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#3efa3e" />
      <stroke
          android:width="1dp"
          android:color="#3efa3e" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#3efa3e"
          android:endColor="#27c127"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#27c127" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>
</selector>